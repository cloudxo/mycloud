{{ define "member/myfiles/modal_edit_name.tmpl" }}
<!-- Modal Edit Name Structure -->
<div id="editNameModal" class="modal modal-myfiles">
    <div class="modal-content">
        <h4>Edit Name</h4>

        <div class="row">
            <form class="col s12" id="editNameForm">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="edit_name" type="text" class="validate counterInput" data-length="15" length="15" required="" aria-required="true">
                        <label for="edit_name">Name</label>
                        <span class="helper-text" data-error="You cannot edit this item!" data-success="Valid name!"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="modal-footer">
        <a id="editNameBtn" href="#!" class="waves-effect waves-green btn light-blue">Edit</a>
        <a id="closeEditNameBtn" href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
</div>
{{ end }}